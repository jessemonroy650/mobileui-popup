<?xml version="1.0" encoding="UTF-8" ?>
    <!-- ADDED xmlns:android so the Android properties can be extended -->
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:android   = "http://schemas.android.com/apk/res/android"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.bsdmasterindex.mobileui-popup-test"
        version     = "1.0"
        versionCode = "10" >

        <!-- versionCode is optional and Android only -->
        <preference name="phonegap-version" value="3.5.0" />

        <name>MobileUI Popup</name>
        <description>MobileUI Popup</description>
        <author href="http://bsdmasterindex.com" email="jessemonroy650@yahoo.com">
        Jesse Monroy
        </author>
        <gap:platform name="android" />
        <preference name="permissions" value="none"/>
        <preference name="android-minSdkVersion" value="10" />
        <preference name="android-targetSdkVersion" value="14" /> 

        <gap:platform name="ios" />

        <preference name="orientation" value="landscape" />

        <!-- device required so we can detect if we are using iOS -->
        <gap:plugin name="org.apache.cordova.device" />

        <gap:config-file platform="android" parent="/manifest/application" >
            <application android:debuggable="false" />
            <activity android:screenOrientation="landscape" android:configChanges="orientation" />
        </gap:config-file>
    </widget>
